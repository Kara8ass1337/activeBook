<%
var options = htmlWebpackPlugin.options;
var context = options.context;
var isMobileApp = options.isMobileApp;
var rootMobileApp = options.rootMobileApp;

var params = {
  context: context,
  isMobileApp: isMobileApp,
  rootMobileApp: rootMobileApp
}
%>

<!DOCTYPE html>
<html lang="ru">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
  <meta name="theme-color" content="#828282" />

  <link rel="preload" href="fonts/Roboto/RobotoBold/RobotoBold.ttf" as="font" />
  <link rel="preload" href="fonts/Roboto/RobotoLight/RobotoLight.ttf" as="font" />
  <link rel="preload" href="fonts/Roboto/RobotoMedium/RobotoMedium.ttf" as="font" />
  <link rel="preload" href="fonts/Roboto/RobotoRegular/RobotoRegular.ttf" as="font" />
  <link rel="preload" href="fonts/Font-Awesome/fontawesome-webfont.ttf" as="font" />

  <title>
    activeBook 2.0
  </title>
</head>

<body class="initing" style="opacity: 0;" data-is-mobile="<%= isMobileApp %>">
  <%= require('elements/page.ejs')({params: params}) %>
</body>

<% if (isMobileApp) { %>
  <script type="text/javascript" charset="utf-8" src="cordova.js"></script>
<% } %>
</html>
